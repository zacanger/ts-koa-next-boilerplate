{
  "name": "ts-koa-next-boilerplate",
  "description": "Web app boilerplate using Koa, TypeScript, Next.js, and Styled Components",
  "version": "0.0.1",
  "private": true,
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "https://zacanger.com"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  },
  "license": "LGPL-3.0",
  "scripts": {
    "build": "next build && tsc --project tsconfig.server.json",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "prebuild": "npm t",
    "prod": "NODE_ENV=production node lib/index.js",
    "start": "nodemon",
    "test": "run-s -s test:ts test:lint",
    "test:lint": "eslint -c .eslintrc.json --ext .ts,.tsx src",
    "test:ts": "run-s test:ts:server test:ts:client",
    "test:ts:client": "tsc --project tsconfig.json --noEmit",
    "test:ts:server": "tsc --project tsconfig.server.json --noEmit"
  },
  "homepage": "https://github.com/zacanger/ts-koa-next-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-koa-next-boilerplate.git"
  },
  "bugs": "https://github.com/zacanger/ts-koa-next-boilerplate/issues",
  "keywords": [
    "boilerplate",
    "koa",
    "next",
    "next.js",
    "react",
    "styled-components",
    "ts",
    "typescript"
  ],
  "dependencies": {
    "humps": "2.0.1",
    "koa": "2.11.0",
    "koa-body": "4.1.1",
    "koa-morgan": "1.0.1",
    "koa-mount": "4.0.0",
    "koa-proxies": "0.11.0",
    "koa-router": "8.0.8",
    "next": "9.3.0",
    "normalize.css": "8.0.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "styled-components": "5.0.1",
    "styled-reset": "4.1.1"
  },
  "devDependencies": {
    "@types/humps": "1.1.3",
    "@types/koa": "2.11.2",
    "@types/koa-morgan": "1.0.4",
    "@types/koa-mount": "4.0.0",
    "@types/koa-proxies": "0.9.0",
    "@types/koa-router": "7.4.0",
    "@types/node": "13.9.1",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/styled-components": "5.0.1",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.1.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "sortpack": "2.1.2",
    "ts-node": "8.6.2",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.tsx": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  }
}
