{
  "name": "ts-koa-next-boilerplate",
  "description": "Web app boilerplate using Koa, TypeScript, Next.js, and Styled Components",
  "version": "1.0.1",
  "private": true,
  "author": {
    "email": "zac@zacanger.com",
    "name": "Zac Anger",
    "url": "https://zacanger.com"
  },
  "funding": {
    "type": "ko-fi",
    "url": "https://ko-fi.com/zacanger"
  },
  "license": "LGPL-3.0",
  "scripts": {
    "build": "next build && tsc --project tsconfig.server.json",
    "clean": "rm -rf node_modules .next lib",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "prebuild": "npm t",
    "preversion": "npm run build",
    "prod": "NODE_ENV=production node lib/index.js",
    "start": "nodemon",
    "test": "run-s -s test:ts test:lint",
    "test:lint": "eslint -c .eslintrc.json --ext .ts,.tsx src server",
    "test:ts": "run-s test:ts:server test:ts:client",
    "test:ts:client": "tsc --project tsconfig.json --noEmit",
    "test:ts:server": "tsc --project tsconfig.server.json --noEmit"
  },
  "homepage": "https://github.com/zacanger/ts-koa-next-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-koa-next-boilerplate.git"
  },
  "bugs": "https://github.com/zacanger/ts-koa-next-boilerplate/issues",
  "keywords": [
    "boilerplate",
    "koa",
    "next",
    "next.js",
    "react",
    "styled-components",
    "ts",
    "typescript"
  ],
  "dependencies": {
    "core-js": "3.6.4",
    "custom-event-polyfill": "1.0.7",
    "fetchyeah": "3.0.11",
    "humps": "2.0.1",
    "koa": "2.11.0",
    "koa-body": "4.1.1",
    "koa-logger": "3.2.1",
    "koa-mid": "3.1.1",
    "koa-pino-logger": "2.1.3",
    "koa-router": "8.0.8",
    "next": "9.3.4",
    "normalize.css": "8.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "styled-components": "5.0.1",
    "styled-reset": "4.1.2",
    "unfetch": "4.1.0"
  },
  "devDependencies": {
    "@types/core-js": "2.5.3",
    "@types/humps": "1.1.3",
    "@types/koa": "2.11.3",
    "@types/koa-logger": "3.1.1",
    "@types/koa-pino-logger": "2.1.6",
    "@types/koa-router": "7.4.0",
    "@types/node": "13.9.8",
    "@types/react": "16.9.31",
    "@types/react-dom": "16.9.6",
    "@types/styled-components": "5.0.1",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "6.8.0",
    "eslint-plugin-zacanger": "1.1.4",
    "husky": "4.2.3",
    "lint-staged": "10.1.1",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.2",
    "sortpack": "2.1.3",
    "ts-node": "8.8.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "*.tsx": [
      "prettier --write"
    ],
    "package.json": [
      "sortpack"
    ]
  }
}
